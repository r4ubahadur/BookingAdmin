<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="20"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="11"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_view_name"
                android:text="@string/app_name"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:textStyle="bold"
                android:textSize="19sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_view_desc"
                android:text="I looked up the definition of “nice” in the dictionary and got the standard “pleasant, agreeable, kind” definition. One definition, however, that is considered archaic and out of use sums it up: fastidious. Apparently, to say someone was “nice” back in the day used to mean that someone was “very attentive to detail.”"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:maxLines="3"
                android:textColor="#000000"
                android:layout_marginRight="8dp"
                android:fontFamily="sans-serif-light"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                        <TextView
                            android:text="Size :"
                            android:textStyle="bold"
                            android:textColor="#2546d7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/text_view_size"
                            android:text="Size :"
                            android:textColor="#835b0b"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />




            </LinearLayout>



                <LinearLayout
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                        <TextView
                            android:text="Color :"
                            android:textStyle="bold"
                            android:textColor="#2546d7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />







                        <TextView
                            android:id="@+id/text_view_color"
                            android:text="Color :"
                            android:textColor="#0db190"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />








            </LinearLayout>


            <LinearLayout
                android:layout_marginLeft="12dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="7dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                    <TextView
                        android:text="Price :"
                        android:textStyle="bold"
                        android:textColor="#2546d7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:id="@+id/text_view_price"
                        android:text="Price"
                        android:textColor="#339e0f"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />




            </LinearLayout>





        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/darker_gray"
            android:layout_height="match_parent">


        </View>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_margin="8dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_view_upload"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>